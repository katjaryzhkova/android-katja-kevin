<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/update_navigate_back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:rotation="180"
            app:srcCompat="@android:drawable/ic_media_play" />

        <EditText
            android:id="@+id/update_name_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/name_hint"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/update_email_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_name_input_field"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/email_hint"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/update_current_password_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_email_input_field"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/current_password_hint"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/update_new_password_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_current_password_input_field"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/new_password_hint"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/update_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update_new_password_input_field"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/update_button" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>